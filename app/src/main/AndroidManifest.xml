<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MESAApp"
        tools:targetApi="31">

        <!--Set the main/ starting activity-->
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

            <meta-data
                android:name="android.app.lib_name"
                android:value="" />
        </activity>


        <!--Add activities-->
        <activity android:name=".Play"/>
        <activity android:name=".Calendar"/>
        <activity android:name=".Profile"/>
        <activity android:name=".Log"/>
        <activity android:name="com.example.mesaapp.calendarparts.CalendarAdapter"
            tools:ignore="Instantiatable" />
        <activity android:name="com.example.mesaapp.calendarparts.CalendarUtils"
            tools:ignore="Instantiatable" />
        <activity android:name="com.example.mesaapp.calendarparts.CalendarViewHolder"
            tools:ignore="Instantiatable" />
        <activity android:name="com.example.mesaapp.calendarparts.EventEditActivity"
            tools:ignore="Instantiatable" />
        <activity android:name="com.example.mesaapp.calendarparts.WeekViewActivity"
            tools:ignore="Instantiatable" />
        <activity android:name="com.example.mesaapp.calendarparts.Event"
            tools:ignore="Instantiatable" />
        <activity android:name="com.example.mesaapp.calendarparts.EventAdapter"
            tools:ignore="Instantiatable" />

    </application>


</manifest>